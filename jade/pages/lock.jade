.abs-center.wd-xl
  // START panel
  .p
    img.media-object.img-thumbnail.img-circle.thumb96.center-block(ng-src="{{user.url}}", alt="Avatar")
  .panel.widget.b0
    .panel-body
      p.text-center Please login to unlock your screen.
      form(role='form', name="lockForm")
        .form-group.has-feedback
          input#exampleInputPassword1.form-control(type='password', placeholder='Password', required='', name='lock_password', ng-model="lock.password")
          span.fa.fa-lock.form-control-feedback.text-muted
          span.text-danger(ng-if="lockForm.lock_password.$dirty && lockForm.lock_password.$error.required") This field is required
        .clearfix
          .pull-left.mt-sm
            a(ui-sref="page.recover").text-muted: small Forgot your password?
          .pull-right
            // Change this button type to submit to send the form data
            button.btn.btn-sm.btn-primary(type='button', ng-click="$state.go('app.dashboard')") Unlock
  // END panel
  .p-lg.text-center
    span &copy; 
    span(ng-bind="app.year") 
    span  - 
    span(ng-bind="app.name")
    br
    span(ng-bind="app.description")
